     {galeria.map((image) => 
     <a href={`https://ucarecdn.com/${image.image.id}/`} data-fancybox="gallery">
      <img loading="lazy" class="slide" src={`https://ucarecdn.com/${image.image.id}/`} alt=""
      ></a>)}</div>
    </article>
    </figure>
    
    
    
</div></div>
