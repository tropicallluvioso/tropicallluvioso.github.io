---
import MainLayout from "../layouts/MainLayout.astro"
import '../styles/main.css';
import '../styles/cards.css';


const response = await fetch('https://randomuser.me/api/?results=6');
const data = await response.json();
const dataRes = data.results;




let {title} = Astro.props;
---

<MainLayout title="Screenwriting - Tropical Lluvioso">

<div class="cardContainer">
{dataRes.map((person) => 
  <figure class="card"><img loading="lazy" src={person.picture.large}  />
    <figcaption class="center-content">
      <h3>{person.name.first}</h3>
      <p class="content"> {person.gender}</p>
      <a class="content btn center-content" href="/screenwriting/"{person.name.first}>Read</a>

    </figcaption>

  </figure>
)}
  </div>
</MainLayout>


