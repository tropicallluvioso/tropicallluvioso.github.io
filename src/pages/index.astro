---
import MainLayout from "../layouts/MainLayout.astro"
import '../styles/main.css';
import '../styles/slideshow.css';

const response = await fetch('https://randomuser.me/api/?results=6');
const data = await response.json();
const dataRes = data.results;

let {title} = Astro.props; 
---

<MainLayout title="Tropical Lluvioso  ">

<div class="container-slides">
      <div class="arrow arrow-left"><i class="fas fa-chevron-circle-left"></i></div>
      {dataRes.map((person) => 
      <img src={person.picture.large} alt="">
      )}
      <div class="arrow arrow-right"><i class="fas fa-chevron-circle-right"></i>
      </div>




</MainLayout>

<script src="../components/auto-slideshow.js"></script>