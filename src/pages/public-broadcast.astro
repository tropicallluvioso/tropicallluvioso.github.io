---
import MainLayout from "../layouts/MainLayout.astro"
import '../styles/main.css';
import '../styles/cards.css';


const response = await fetch('https://randomuser.me/api/?results=2');
const data = await response.json();
const dataRes = data.results;




let {title} = Astro.props;
---

<MainLayout title="Public Broadcasting - Tropical Lluvioso">

<div class="cardContainer">
{dataRes.map((person) => 
  <figure class="card"><img src={person.picture.large} />
    <figcaption>
      <h3>{person.name.first}</h3>
      <p class="content"> {person.gender}</p>
      <a class="content" href={`/public-broadcast/${person.gender}`}>{person.name.first}</a>

    </figcaption>

  </figure>
)}
  </div>



